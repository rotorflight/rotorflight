# Motorised Tail (MT) ####################################################

# remove resources											
resource MOTOR 2 NONE											
resource MOTOR 1 NONE											
resource SERIAL_TX 3 NONE											
resource SERIAL_TX 1 NONE											
resource LED_STRIP 1 NONE											

# resources											
resource MOTOR 1     B07											
resource MOTOR 2     B06											
resource SERVO 1     B10											
resource SERVO 2     A09											
resource SERVO 3     B01																		

set tail_rotor_mode = MOTORIZED											

# timers											
timer  B07   AF2              # M1 - pin B07: TIM4 CH2 (AF2)  											
timer  B06   AF2              # M2/S4 - pin B06: TIM4 CH1 (AF2)											
timer  B10   AF1              # S1 - pin B10: TIM2 CH3 (AF1)  											
timer  A09   AF1              # S2 - pin A09: TIM1 CH2 (AF1)  											
timer  B01   AF2              # S3 - pin B01: TIM3 CH4 (AF2)  											

# dma											
dma pin B07 0                 # M1 - 0: DMA1 Stream 3 Channel 2											
dma pin B06 0                 # M2/S4 - 0: DMA1 Stream 0 Channel 2 											
dma pin B10 0                 # S1 - 0: DMA1 Stream 1 Channel 3											
dma pin A09 0                 # S2 - 0: DMA2 Stream 6 Channel 0											
dma pin B01 0                 # S3 - 0: DMA1 Stream 2 Channel 5																				
######################################################################